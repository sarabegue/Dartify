<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerY="1.0"
                android:endColor="@color/color_tabLayout_Light"
                android:startColor="@color/color_tabLayout_Dark" />
            <corners android:radius="15dp" />
            <stroke
                android:width="5dp"
                android:color="@color/color_accent" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerY="1.0"
                    android:endColor="#5195c4"
                    android:startColor="#5195c4" />
                <corners android:radius="15dp" />
                <stroke
                    android:width="5dp"
                    android:color="@color/color_accent" />
            </shape>
        </clip>
    </item>
</layer-list>