<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lightgray"
    tools:context=".Activities.PersonalityQuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/avatarbg"
                    android:gravity="center_vertical"
                    android:text="@string/personality_test"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/heading_personality" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Elige un grupo"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/tvGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dotted_border_blue"
                android:orientation="horizontal"
                android:tag="tvGroup1">

                <TextView
                    android:id="@+id/tvg11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Independiente\nCalculador\nAuténtico"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvg12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Metódico\nDivertido\nTenaz"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dotted_border_blue"
                android:orientation="horizontal"
                android:tag="tvGroup2">

                <TextView
                    android:id="@+id/tvg21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Despreocupado\nSilencioso\nSolitario"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvg22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Modesto\nSoñador\nPasivo"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dotted_border_blue"
                android:orientation="horizontal"
                android:tag="tvGroup3">

                <TextView
                    android:id="@+id/tvg31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Comprometido\nEntregado\nAbnegado"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvg32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Ayudador\nRiguroso\nAmable"
                    android:textAlignment="center"
                    android:textColor="@color/color_darkgray"
                    android:textSize="18sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/timeBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:progressDrawable="@drawable/customprogressbar" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonEndPersonalityQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/actionbutton"
        android:text="@string/continuebutton"
        android:textColor="@color/white" />
</RelativeLayout>