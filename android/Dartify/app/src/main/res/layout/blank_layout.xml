<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/color_menubackground"
android:orientation="vertical" >

<ImageView
    android:id="@+id/imageViewEmpty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:src="@drawable/m1" />

<TextView
    android:id="@+id/textviewLoadingLine1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:layout_below="@id/imageViewEmpty"
    android:layout_centerHorizontal="true"
    android:text="Estamos cargando tu perfil"
    android:textSize="20sp" />

<TextView
    android:id="@+id/textviewLoadingLine2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/textviewLoadingLine1"
    android:layout_centerHorizontal="true"
    android:textColor="@color/white"
    android:text="Espera un poco mÃ¡s"
    android:textSize="16sp" />
</RelativeLayout>