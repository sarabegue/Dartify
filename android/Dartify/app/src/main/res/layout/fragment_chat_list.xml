<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lightgray"
    tools:context=".Fragments.ChatListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerChatList"
        android:src="@drawable/m3" />

    <TextView
        android:id="@+id/textviewChatLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewEmpty"
        android:layout_centerHorizontal="true"
        android:text="No tienes chats"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewChatLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewChatLine1"
        android:layout_centerHorizontal="true"
        android:text="Â¡Busca con quien hablar!"
        android:textSize="16sp" />
</RelativeLayout>