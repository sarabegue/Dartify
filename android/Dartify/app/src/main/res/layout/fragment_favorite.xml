<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lightgray"
    android:padding="0dp"
    tools:context=".Fragments.FavoriteFragment">

    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewFavorites"
        android:src="@drawable/m4" />

    <TextView
        android:id="@+id/textviewFavoritesLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewEmpty"
        android:layout_centerHorizontal="true"
        android:text="No tienes favoritos"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewNotificationLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewFavoritesLine1"
        android:layout_centerHorizontal="true"
        android:text="Â¡Ve a hacer amigos!"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>