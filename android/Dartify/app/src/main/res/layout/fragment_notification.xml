<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lightgray"
    tools:context=".Fragments.NotificationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerNotification"
        android:src="@drawable/m2" />

    <TextView
        android:id="@+id/textviewNotificationLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewEmpty"
        android:layout_centerHorizontal="true"
        android:text="No tienes notificaciones"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewNotificationLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewNotificationLine1"
        android:layout_centerHorizontal="true"
        android:text="¡Regresa más tarde!"
        android:textSize="16sp" />

</RelativeLayout>