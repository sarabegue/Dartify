<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop1"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop1" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop2"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop2" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop3"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop3" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop4"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop4" />

    <ImageView
        android:id="@+id/i5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop5"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop5" />

    <ImageView
        android:id="@+id/i6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulletazul"
        app:layout_constraintBottom_toBottomOf="@id/textpop6"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV0"
        app:layout_constraintTop_toTopOf="@id/textpop6" />

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_accent"
        android:padding="10dp"
        android:text="CaracterÃ­sticas"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textpop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textHeading" />

    <TextView
        android:id="@+id/textpop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textpop1" />

    <TextView
        android:id="@+id/textpop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textpop2" />

    <TextView
        android:id="@+id/textpop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textpop3" />

    <TextView
        android:id="@+id/textpop5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textpop4" />

    <TextView
        android:id="@+id/textpop6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@id/textpop5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>
