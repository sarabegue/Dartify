<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--FORMULARIOS-->

    <style name="LabelForm" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_darkgray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextForm" parent="@android:style/Theme.Holo.Light">
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_darkgray</item>
    </style>

    <style name="SpinnerSelectedStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_darkgray</item>
    </style>

    <style name="ActivityLoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_menubackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--TAB LAYOUT-->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabBackground">@drawable/tablelayoutbg</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--FRAGMENT MENU-->
    <style name="FragmentMenuButton">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/fragmentmenubutton</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:src">@drawable/horizontalrule_white</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
